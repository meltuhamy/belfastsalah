<?xml version='1.0' encoding='utf-8'?>
<widget id="com.meltuhamy.londonsalah" version="2.0.12" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Prayer Times</name>
    <description>Prayer times with notifications</description>
    <author email="tuhamy@gmail.com" href="http://meltuhamy.com/">Mohamed Eltuhamy</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" qualifier="ldpi" src="resources/res/icons/android/drawable-ldpi-icon.png" />
        <icon density="mdpi" qualifier="mdpi" src="resources/res/icons/android/drawable-mdpi-icon.png" />
        <icon density="hdpi" qualifier="hdpi" src="resources/res/icons/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi" qualifier="xhdpi" src="resources/res/icons/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" qualifier="xxhdpi" src="resources/res/icons/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" qualifier="xxxhdpi" src="resources/res/icons/android/drawable-xxxhdpi-icon.png" />
        <splash qualifier="ldpi" src="resources/res/screens/android/screen-ldpi-portrait.png" />
        <splash qualifier="mdpi" src="resources/res/screens/android/screen-mdpi-portrait.png" />
        <splash qualifier="hdpi" src="resources/res/screens/android/screen-hdpi-portrait.png" />
        <splash qualifier="xhdpi" src="resources/res/screens/android/screen-xhdpi-portrait.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="29" src="resources/res/icons/ios/icon-small.png" width="29" />
        <icon height="58" src="resources/res/icons/ios/icon-small-2x.png" width="58" />
        <icon height="40" src="resources/res/icons/ios/icon-40.png" width="40" />
        <icon height="80" src="resources/res/icons/ios/icon-40-2x.png" width="80" />
        <icon height="50" src="resources/res/icons/ios/icon-50.png" width="50" />
        <icon height="100" src="resources/res/icons/ios/icon-50-2x.png" width="100" />
        <icon height="57" src="resources/res/icons/ios/icon.png" width="57" />
        <icon height="114" src="resources/res/icons/ios/icon-2x.png" width="114" />
        <icon height="60" src="resources/res/icons/ios/icon-60.png" width="60" />
        <icon height="120" src="resources/res/icons/ios/icon-60-2x.png" width="120" />
        <icon height="180" src="resources/res/icons/ios/icon-60-3x.png" width="180" />
        <icon height="72" src="resources/res/icons/ios/icon-72.png" width="72" />
        <icon height="144" src="resources/res/icons/ios/icon-72-2x.png" width="144" />
        <icon height="76" src="resources/res/icons/ios/icon-76.png" width="76" />
        <icon height="152" src="resources/res/icons/ios/icon-76-2x.png" width="152" />
        <splash height="480" src="resources/res/screens/ios/screen-iphone-portrait.png" width="320" />
        <splash height="960" src="resources/res/screens/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1136" src="resources/res/screens/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="1334" src="resources/res/screens/ios/screen-iphone-portrait-667h.png" width="750" />
        <splash height="2208" src="resources/res/screens/ios/screen-iphone-portrait-736h.png" width="1242" />
        <splash height="1024" src="resources/res/screens/ios/screen-ipad-portrait.png" width="768" />
        <splash height="2048" src="resources/res/screens/ios/screen-ipad-portrait-2x.png" width="1536" />
    </platform>
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.1" />
    <plugin name="cordova-plugin-console" spec="1.0.5" />
    <plugin name="cordova-plugin-statusbar" spec="2.2.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.1" />
    <plugin name="cordova-sqlite-storage" spec="~2.0.0" />
    <plugin name="ionic-plugin-deploy" spec="~0.6.6" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="https://github.com/Telerik-Verified-Plugins/LocalNotification" />
    <allow-navigation href="http://192.168.1.2:8100" />
    <allow-navigation href="http://192.168.0.6:8100" />
    <plugin name="cordova-plugin-device" spec="~1.1.4" />
</widget>
